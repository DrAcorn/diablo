<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="compartir.unitec.org.diablo.MainActivity">

  <TextView
      android:layout_width="match_parent"
      android:text="El virus no nos atacara"
      android:textSize="20dp"
      android:gravity="center"
      android:layout_margin="15dp"
      android:layout_height="wrap_content" />


    <EditText
        android:layout_width="match_parent"
        android:hint="Introduce un mensaje"
        android:layout_margin="15dp"
        android:id="@+id/mensaje"
        android:layout_height="wrap_content" />
    <Button
        android:layout_width="match_parent"
        android:text="Compartir"
        android:background="@color/colorAccent"
        android:textColor="@color/blanco"
        android:id="@+id/compartir"
        android:layout_height="wrap_content" />

    <!-- Pasos para programar
    1- Poner un id a nuestros componentes
    2-texto mensaje y enviar


    -->
</LinearLayout>
